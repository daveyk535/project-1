
<h1> Welcome to BurgerBuddy </h1>

<!-- Show the rankings for the top 5 burgers in table format: -->
<table class="table .table-striped">
	<tr>
		<th>Burger name</th>
  	<th>Restaurant</th> 
  	<th>Average score</th>
	</tr>
<% @burgers.each do |burger| %>
  <tr>
    <td>
      <p class="lead"><%= link_to(burger.burger_name) %></p>
    </td>
    <td>
      <p class="lead"><%= link_to(burger.restaurant.name) %></p>
    </td>
    <td>
    	<p class="lead"><%= burger.average_score %></p>
    </td>
</tr>
<% end %>
</table>

<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
<%= link_to "Review a burger!", new_review_path, class: "btn btn-large btn-primary" %>
